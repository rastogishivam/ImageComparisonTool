			<td >{{counter}}</td>
			<td >{{screenName}}</td>
			<td><img id="myImg" src="{{actualImagePath}}" style="width:100%;max-width:200px; height:50px " onclick="myfunction(this.src)"></td>
			<td><img id="myImg" src="{{exceptedImagePath}}" style="width:100%;max-width:200px; height:50px " onclick="myfunction(this.src)"></td>
			<td><img id="myImg" src="{{differenceImage}}" style="width:100%;max-width:200px; height:50px " onclick="myfunction(this.src)"></td>
			<td>{{similarityOfImages}} %</td>
		</tr>
	{{/reportData}}
		</tbody>
	</table>


</div>
</div>
</div>
</div>
</div>

<script>
function myFunction() {
  var x = document.getElementById("chartContainer");
  if (x.style.display === "block") {
    x.style.display = "none";
  } else {
    x.style.display = "block";
  }
}
</script>

<script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

{{#reportChartData}}
<script type="text/javascript">
  window.onload = function () {
    var chart = new CanvasJS.Chart("chartContainer",
    {
    backgroundColor: "#FFFFFF",
      title:{
        text: "Stats in Bar Chart",
         fontColor: "#333"
      },
      data: [
      {
        type: "bar",
       dataPoints: [
        { y: {{totalNotDiffImages}}, label: "Total No. of Matched Images"},
        { y: {{totalDiffImages}}, label: "Total No. of Mismatched Images"},
        { y: {{totalImages}}, label: "Total No. of Images"}
        ]
      },
      ]
    });

chart.render();
}
</script>
